@model LojaGeek.Model.DB.Model.Cliente

@{
    ViewBag.Title = "Cadastro de Cliente";
}

@using (Html.BeginForm("GravarCliente", "Cliente", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Cadastro de Cliente
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    <label>Nome</label>

                                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    <label>Sobrenome</label>

                                    @Html.EditorFor(model => model.Sobrenome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    <label>CPF</label>

                                    @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    <label>E-mail</label>

                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                </div>
                                <fieldset>
                                    <legend>Interesses:</legend>
                                    <div style="display:flex; justify-content:space-around">
                                        <input type="checkbox" name="acao" value="acao" class="form-check-input" />
                                        <label class="form-check-label">Ação</label>
                                        <input type="checkbox" name="rpg" value="rpg" class="form-check-input" />
                                        <label class="form-check-label">RPG</label>
                                        <input type="checkbox" name="esporte" value="esporte" class="form-check-input" />
                                        <label class="form-check-label">Esporte</label>
                                        <input type="checkbox" name="aventura" value="aventura" class="form-check-input" />
                                        <label class="form-check-label">Aventura</label>
                                        <input type="checkbox" name="estrategia" value="estrategia" class="form-check-input" />
                                        <label class="form-check-label">Estratégia</label>
                                        <input type="checkbox" name="simulador" value="simulador" class="form-check-input" />
                                        <label class="form-check-label">Simulador</label>
                                    </div>
                                </fieldset>

                                <hr />
                                <div class="form-group">

                                    <input type="submit" class="btn btn-md btn-primary btn-block" value="Enviar">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

