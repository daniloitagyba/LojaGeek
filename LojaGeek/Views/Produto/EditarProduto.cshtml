@model LojaGeek.Model.DB.Model.Produto

@{
    ViewBag.Title = "Cadastrar / Editar Produto";
}

@using (Html.BeginForm("GravarProduto", "Produto", FormMethod.Post))
{
@Html.AntiForgeryToken()
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cadastro de Produto
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <label>Descrição</label>
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Descrição Completa</label>
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                <label>Quantidade em Estoque</label>
                                @Html.EditorFor(model => model.QuantidadeEstoque, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.QuantidadeEstoque, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                <label>Preço Unitário</label>
                                @Html.EditorFor(model => model.PrecoUnitario, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.PrecoUnitario, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Foto</label>
                                @Html.EditorFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-md btn-primary btn-block" value="Enviar">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Produto", null, new { @class = "btn btn-md btn-default" })
</div>
