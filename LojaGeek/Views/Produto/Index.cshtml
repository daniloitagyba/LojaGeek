@model IEnumerable<LojaGeek.Model.DB.Model.Produto>

@{
    ViewBag.Title = "Index";
}
<hr />
<p>
    @Html.ActionLink("Novo Produto", "CadastrarProduto", "Produto", null, new { @class = "btn btn-md btn-primary" })

    @using (Html.BeginForm("BuscarPeloNome", "Produto", FormMethod.Get))
    {



        @Html.Editor("edtBusca")
        <button type="submit" valur="Buscar" class="btn btn-primary">
            <i class="glyphicon glyphicon-search"></i> Buscar
        </button>
    }

</p>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Produtos
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-responsive">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PrecoUnitario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Foto)
                            </th>
                            <th>#</th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrecoUnitario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Foto)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "EditarProduto", new { id = item.Id }) |
                                        @Html.ActionLink("Apagar", "ApagarProduto", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
