@{
    ViewBag.Title = "Login Administrativo";
}
@using (Html.BeginForm("LoginAdministrativo", "Administrativo", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login Administrativo</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <input class="form-control" placeholder="Senha" name="senha" type="password" value="">
                        </div>
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Enviar">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
